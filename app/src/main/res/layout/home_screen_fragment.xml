<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeScreenFragment">


    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:contentDescription="@string/background_photo_desc"
        android:scaleType="centerCrop"
        android:src="@drawable/background"

        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textview_rent_apartment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/first_page"
        android:textSize="30sp"
        android:textColor="@color/white"
        app:layout_constraintVertical_bias="0.2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_lets_start"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/lets_start"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:backgroundTint="@color/home_button_color"
        app:layout_constraintTop_toBottomOf="@id/textview_rent_apartment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.8"
        />





</androidx.constraintlayout.widget.ConstraintLayout>